<div class="col-4">
    {{> user/profile-sidebar}}
</div>

<div class="col-8">
    <div class="card">
        <div class="card-header">
            Update Your Personal Data
        </div>

        <div class="card-body">

            <form method="POST">
                <input type="hidden" name="keepMeSafeFromCsrf" value="{{keepMeSafeFromCsrf}}">

                <div class="form-group">
                    <label class="label {{#if errors.username}}text-danger{{/if}}" for="username">
                        {{#if errors.username}} {{errors.username.message}} {{else}}Username {{/if}}
                    </label>
                    <input class="form-control {{#if errors.username}}is-invalid{{else}}{{#if
                                 username}}is-valid{{/if}}{{/if}}" type="text" placeholder="Your personal username" id="username"
                        name="username" value="{{user.username}}">
                </div>

                <div class="form-group">
                    <label class="label {{#if errors.homepage}}text-danger{{/if}}" for="homepage">
                        {{#if errors.homepage}} {{errors.homepage.message}} {{else}}Homepage {{/if}}
                    </label>
                    <input class="form-control {{#if errors.homepage}}is-invalid{{else}}{{#if
                                 homepage}}is-valid{{/if}}{{/if}}" type="text" placeholder="Your homepage" id="homepage"
                        name="homepage" value="{{user.homepage}}">
                </div>

                <button class="btn btn-primary mt-4" type="submit">Update</button>

            </form>
        </div>
    </div>
</div>