<div class="col-4">
    {{> user/profile-sidebar}}
</div>

<div class="col-8">
    <div class="card">
        <form method="POST">
            <div class="card-header">
                <div class="card-header-icon">
                    <img src="/images/icons/user-check-blue.svg" alt="">
                </div>
                Update Your Personal Data
            </div>

            <div class="card-body">

                <input type="hidden" name="keepMeSafeFromCsrf" value="{{keepMeSafeFromCsrf}}">

                <div class="form-group">
                    <label class="label {{#if errors.email}}text-danger{{/if}}" for="email">
                        {{#if errors.email}} {{errors.email.message}} {{else}}Email Address{{/if}}
                    </label>
                    <input class="form-control {{#if errors.email}}is-invalid{{else}}{{#if
                                 email}}is-valid{{/if}}{{/if}}" type="text" placeholder="Your email address" id="email"
                        name="email" value="{{user.email}}">
                </div>

                <div class="form-group">
                    <label class="label {{#if errors.name}}text-danger{{/if}}" for="name">
                        {{#if errors.name}} {{errors.name.message}} {{else}}Name{{/if}}
                    </label>
                    <input class="form-control {{#if errors.name}}is-invalid{{else}}{{#if
                                 name}}is-valid{{/if}}{{/if}}" type="text" placeholder="Your name" id="name" name="name"
                        value="{{user.name}}">
                </div>

            </div>

            <div class="card-footer">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>

        </form>
    </div>
</div>